call plug#end()

if (has("termguicolors"))
    set termguicolors
endif
syntax enable

let g:gruvbox_contrast_dark='hard'
colorscheme gruvbox
set background=dark

set completeopt=menu,menuone,noselect

function! RunCPP()
    !g++ %
    term ./a.out
    start
endfunction

function! CompileCPP()
    !g++ %
    term
    start
endfunction

function! ExecScript()
    w
    !chmod a+x %
    !./%
endfunction

autocmd FileType cpp map <F9> :call RunCPP()<CR>
autocmd FileType cpp map <F8> :call CompileCPP()<CR>
map <F10> :call ExecScript()<CR>

