set number relativenumber
set tabstop=4
set softtabstop=4
set expandtab
set shiftwidth=4
set smartindent 
set wildmode=longest,list
set cc=100
filetype plugin indent on
filetype plugin on
syntax on
set mouse=a
set clipboard=unnamedplus
set cursorline
set ttyfast
set secure exrc

call plug#begin("~/.vim/plugged")
